{
    "manifest_version": 3,
    "name": "Bluesky Cinema",
    "description": "Bluesky Cinema",
    "version": "0.1.0",
    "icons": { 
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "permissions": [ "scripting" ],
    "host_permissions": [
        "https://bksy.app/*"
    ],
    "content_scripts": [{
        "js": ["jquery.3.7.1.js", "cinema.js"],
        "matches": ["https://bsky.app/*"]
    }]
}
